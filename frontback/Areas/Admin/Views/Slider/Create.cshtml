@using frontback.Areas.Admin.ViewModels;

@model SliderCreateViewModel

@{
    ViewData["Title"] = "Slider";
}


<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description">
                        Basic form layout
                    </p>
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="Title">Title</label>
                            <input  class="form-control" id="title" placeholder="Title" asp-for="Tittle">
                        </div>
                        <div class="form-group">
                            <label for="Description">Description</label>
                            <input  class="form-control" id="Description" placeholder="Description" asp-for="Description">
                        </div>
                        <div class="form-group">
                            <label for="Image">Image</label>
                            <input class="form-control" id="Image" placeholder="Image" asp-for="File">
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>