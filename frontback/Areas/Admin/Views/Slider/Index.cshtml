
@{
    ViewData["Title"] = "Sliders";
}

@model List<Slider>

  <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Sliders</h4>
                 
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                                <tr>
                                    <th>Image</th>
                          <th>Title</th>
                          <th>Status</th>
                         
                          <th>Offer</th>
                        </tr>
                      </thead>
                      <tbody>

                                @foreach(var slider in Model)
                                {
                                <tr>
                          <td>   
                               <img src="~/assest/images/website-images/@slider.Image">  </td>
                          <td>@slider.Tittle</td>
                          <td>@slider.Offer</td>
                          <td>@slider.Description</td>
                        </tr>
                                    
                                }
                        
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
          
            
          </div>
    </div>
</div>

